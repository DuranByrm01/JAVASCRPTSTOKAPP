<html lang="tr">
<head>
    <%- include("../partials/meta") %>
    <title>ÜRETİM KAYITLARI</title>
</head>
<body class="bg-dark">
    <%- include("../partials/nav") %>

    <div class="container-xl bg-primary mt-3 p-2 w-auto" >

        <%- include("../partials/uretımNav") %>

        

